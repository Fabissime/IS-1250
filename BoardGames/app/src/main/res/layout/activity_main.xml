<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hugomartinet.boardgames.MainActivity"
    android:background="@drawable/blackboard">

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Board\nGames"
        android:textAlignment="center"
        android:textSize="60dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />


        <TableLayout
            android:layout_below="@id/title1"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/button1"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_column="0"
                    android:layout_marginLeft="5dp"
                    android:layout_row="0"
                    android:background="@drawable/tictactoe_button"
                    android:text="" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_alignParentStart="true"
                    android:layout_column="1"
                    android:layout_marginLeft="5dp"
                    android:layout_row="0"
                    android:background="@drawable/fourinarow_button"
                    android:text="" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_alignParentStart="true"
                    android:layout_column="2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_row="0"
                    android:background="@drawable/dots_button"
                    android:text="" />

            </TableRow>

        </TableLayout>

</RelativeLayout>